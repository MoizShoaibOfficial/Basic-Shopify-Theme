{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Discover amazing products at great prices"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<section class="hero-banner">
  {% if section.settings.image != blank %}
    <div class="hero-banner__image">
      <img 
        src="{{ section.settings.image | image_url: width: 1920 }}" 
        alt="{{ section.settings.heading | escape }}"
        loading="eager"
      >
    </div>
  {% endif %}
  <div class="hero-banner__content container">
    <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    <p class="hero-banner__text">{{ section.settings.text }}</p>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link | default: routes.collections_url }}" class="hero-banner__button button button--primary">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

